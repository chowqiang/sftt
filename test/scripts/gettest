#!/bin/bash

server_bin=/root/sftt/server/sfttd
client_bin=/root/sftt/client/sftt

home=/root/sftt
src=/root/sftt/test
dest=/var/sftt/tmp11

[ ! -d $dest ] && mkdir $dest

$server_bin stop
nohup $server_bin start > /tmp/nohup.txt 2>&1 &

sleep 1

$client_bin root@127.0.0.1:$home/README.md $dest
$client_bin root@127.0.0.1:$src $dest
